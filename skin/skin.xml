<?xml version="1.0" encoding="utf-8"?>
<Skin>
  
   <!-- simple dark image-->
  <Resources>
    <Image name="background" url="background.png"/>
  </Resources>

   <!-- gui object styles, buttons, labels, etc, etc -->
  <Styles>
    <Style name="MyButtonC" inherit="Standard.AddIn.ButtonC"/>
  </Styles>

   <!-- create as many different forms as you want for different scripts -->
  <Forms>
    <Form name="MyForm" title="Hello World" buttons="close" image="background" width="200" height="100" windowstyle="dialogstyle restorepos" >
      <!-- view is used to move some things on the form around as a group -->
      <View size="10,10,200,100">
          <Button name='MyButton' title='Click Me...' width='100' height='30' style='MyButtonC'/>
      </View>
    </Form>
  </Forms>

</Skin>
